@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --accent-color: #667eea;
        --text-dark: #1a202c;
        --border-color: #e2e8f0;
        --shadow-lg: 0 10px 25px rgba(0,0,0,0.1);
    }

    .login-container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .login-title {
        font-size: 2.5rem;
        font-weight: 800;
        background: var(--primary-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-align: center;
        margin-bottom: 2rem;
    }

    .auth-card {
        background: white;
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: var(--shadow-lg);
        border: 1px solid rgba(102, 126, 234, 0.1);
        text-align: center;
    }

    .icon-wrapper {
        margin-bottom: 1.5rem;
    }

    .icon-wrapper i {
        font-size: 4rem;
    }

    .btn-primary {
        background: var(--primary-gradient);
        border: none;
        border-radius: 12px;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(102,126,234,.3);
        padding: 0.75rem 2rem;
    }

        .btn-primary:hover {
            filter: brightness(1.05);
            transform: translateY(-2px);
        }

    .auth-links {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--border-color);
    }

        .auth-links a {
            color: var(--accent-color);
            font-weight: 500;
            text-decoration: none;
        }
</style>

<div class="login-container">
    <h1 class="login-title">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <section class="auth-card">
                <div class="icon-wrapper">
                    <i class="bi bi-check-circle-fill text-success"></i>
                </div>
                <partial name="_StatusMessage" model="Model.StatusMessage" />
                
                @if (Model.StatusMessage?.Contains("successfully") == true || Model.StatusMessage?.Contains("confirmed") == true)
                {
                    <div class="mt-4">
                        <a asp-page="./Login" class="btn btn-primary">
                            Continue to Login
                        </a>
                    </div>
                }
                else
                {
                    <div class="auth-links">
                        <p><a asp-page="./Login">Back to Login</a></p>
                    </div>
                }
            </section>
        </div>
    </div>
</div>
