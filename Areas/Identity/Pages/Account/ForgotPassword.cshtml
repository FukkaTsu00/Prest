@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #10b981 0%, #059669 100%);
        --accent-color: #10b981;
        --accent-hover: #059669;
        --text-dark: #1f2937;
        --text-muted: #6b7280;
        --border-color: #e5e7eb;
        --shadow-lg: 0 10px 25px rgba(0,0,0,0.1);
        --success-light: rgba(16, 185, 129, 0.1);
    }

    .login-container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .login-title {
        font-size: 2.5rem;
        font-weight: 800;
        background: var(--primary-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-align: center;
        margin-bottom: 2rem;
    }

    .auth-card {
        background: white;
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: var(--shadow-lg);
        border: 1px solid rgba(16, 185, 129, 0.1);
        transition: all 0.3s ease;
    }

        .auth-card h2 {
            font-weight: 700;
            margin-bottom: 1.5rem;
        }

        .auth-card hr {
            border: none;
            height: 2px;
            background: var(--primary-gradient);
            opacity: 0.3;
            margin: 1.5rem 0;
        }

    .form-floating > .form-control {
        border: 2px solid var(--border-color);
        border-radius: 12px;
        height: 58px;
    }

        .form-floating > .form-control:focus {
            border-color: var(--accent-color);
            box-shadow: 0 0 0 4px rgba(102,126,234,.1);
        }

    .btn-primary {
        background: var(--primary-gradient);
        border: none;
        border-radius: 12px;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(102,126,234,.3);
    }

        .btn-primary:hover {
            filter: brightness(1.05);
            transform: translateY(-2px);
        }

    .auth-links {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--border-color);
    }

        .auth-links a {
            color: var(--accent-color);
            font-weight: 500;
            text-decoration: none;
        }

    .text-danger {
        font-size: 0.875rem;
        font-weight: 500;
    }

    .validation-summary-errors {
        background: #fff5f5;
        border: 1px solid #feb2b2;
        border-radius: 12px;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }
</style>

<div class="login-container">
    <h1 class="login-title">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <section class="auth-card">
                <h2>Enter your email.</h2>
                <hr />

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger validation-summary-errors" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>

                    <div class="auth-links">
                        <p><a asp-page="./Login">Back to Login</a></p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
