@model GestionPrestation.Models.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var model = Model ?? new GestionPrestation.Models.ViewModels.AdminDashboardViewModel();
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    :root {
        --primary-green: #10b981;
        --primary-green-dark: #065f46;
        --primary-green-light: #d1fae5;
        --accent-emerald: #34d399;
        --surface-white: #ffffff;
        --text-main: #111827;
        --text-secondary: #64748b;
        --card-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.04), 0 4px 6px -2px rgba(0, 0, 0, 0.02);
        --card-shadow-hover: 0 20px 25px -5px rgba(16, 185, 129, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    body {
        background-color: #f8fafc;
    }

    .dashboard-wrapper {
        padding: 2.5rem 1.5rem;
        max-width: 1600px;
        margin: 0 auto;
    }

    /* Glass Header */
    .glass-header {
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 20px;
        padding: 1.5rem 2rem;
        margin-bottom: 2.5rem;
        box-shadow: var(--card-shadow);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .page-title-group h1 {
        font-size: 1.875rem;
        font-weight: 800;
        color: var(--text-main);
        letter-spacing: -0.025em;
        margin: 0;
    }

    /* Enhanced Stat Cards */
    .stat-card {
        background: var(--surface-white);
        border-radius: 20px;
        border: 1px solid #f1f5f9;
        padding: 1.5rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        height: 100%;
        box-shadow: var(--card-shadow);
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--card-shadow-hover);
            border-color: var(--primary-green-light);
        }

    .icon-box {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        margin-bottom: 1.25rem;
    }

    .stat-value {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--text-main);
        margin-bottom: 0.25rem;
    }

    .stat-name {
        color: var(--text-secondary);
        font-size: 0.875rem;
        font-weight: 500;
        margin-bottom: 1rem;
    }

    /* Trend Indicators */
    .trend-tag {
        display: inline-flex;
        align-items: center;
        padding: 2px 8px;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .trend-up {
        background: #dcfce7;
        color: #166534;
    }

    /* Summary Section */
    .summary-card {
        background: white;
        border-radius: 24px;
        padding: 2rem;
        box-shadow: var(--card-shadow);
        height: 100%;
    }

    .progress-thin {
        height: 8px;
        border-radius: 10px;
        background-color: #f1f5f9;
        margin-top: 8px;
    }

    .custom-btn {
        background: #f8fafc;
        border: 1px solid #e2e8f0;
        color: var(--text-main);
        font-weight: 600;
        padding: 0.5rem 1rem;
        border-radius: 10px;
        transition: all 0.2s;
    }

        .custom-btn:hover {
            background: var(--primary-green);
            color: white;
            border-color: var(--primary-green);
        }

    /* Animations */
    @@keyframes slideInUp {
        from {
            transform: translateY(20px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .animate-card {
        animation: slideInUp 0.5s ease forwards;
    }
</style>

<div class="dashboard-wrapper">
    <header class="glass-header">
        <div class="page-title-group">
            <h1>Admin Overview</h1>
            <p class="text-secondary mb-0">Welcome back, Chief. Here's what's happening today.</p>
        </div>
        <div class="d-none d-md-block">
            <span class="badge bg-emerald-100 text-success p-2 px-3 rounded-pill" style="background: var(--primary-green-light); color: var(--primary-green-dark) !important; font-weight: 700;">
                <i class="bi bi-shield-check me-1"></i> System Verified
            </span>
        </div>
    </header>

    <div class="row g-4 mb-5">
        <div class="col-xl-3 col-md-6 animate-card" style="animation-delay: 0.1s">
            <div class="stat-card">
                <div class="icon-box bg-primary bg-opacity-10 text-primary">
                    <i class="bi bi-people-fill"></i>
                </div>
                <span class="stat-name">Total Clients</span>
                <div class="d-flex align-items-baseline gap-2">
                    <h2 class="stat-value">@Model.TotalClients</h2>
                    <span class="trend-tag trend-up">+12%</span>
                </div>
                <div class="mt-auto pt-3">
                    <a asp-action="Users" class="text-decoration-none text-primary fw-bold small">
                        View Database <i class="bi bi-chevron-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 animate-card" style="animation-delay: 0.2s">
            <div class="stat-card">
                <div class="icon-box bg-success bg-opacity-10 text-success">
                    <i class="bi bi-person-badge-fill"></i>
                </div>
                <span class="stat-name">Prestataires</span>
                <div class="d-flex align-items-baseline gap-2">
                    <h2 class="stat-value">@Model.TotalPrestataires</h2>
                    <span class="trend-tag trend-up">+5%</span>
                </div>
                <div class="mt-auto pt-3">
                    <a asp-action="PendingApprovals" class="text-decoration-none text-success fw-bold small">
                        Manage Approvals <i class="bi bi-chevron-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-xl-6 col-md-12 animate-card" style="animation-delay: 0.3s">
            <div class="stat-card" style="background: linear-gradient(to right, #ffffff, #f0fdf4);">
                <div class="row align-items-center">
                    <div class="col-8">
                        <span class="stat-name">Total Revenue</span>
                        <h2 class="stat-value" style="font-size: 2.5rem; color: var(--primary-green-dark);">@Model.TotalRevenue.ToString("C")</h2>
                        <p class="text-secondary small mb-0 mt-2">
                            <i class="bi bi-graph-up-arrow text-success me-1"></i>
                            <strong>23% increase</strong> from last month
                        </p>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon-box bg-success text-white ms-auto" style="width: 64px; height: 64px;">
                            <i class="bi bi-currency-dollar fs-3"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-7">
            <div class="summary-card">
                <h3 class="h5 fw-bold mb-4">User Distribution</h3>

                <div class="mb-4">
                    <div class="d-flex justify-content-between mb-1">
                        <span class="small fw-600">Clients</span>
                        <span class="small fw-bold">@Model.TotalClients</span>
                    </div>
                    <div class="progress progress-thin">
                        <div class="progress-bar bg-primary" style="width: 65%"></div>
                    </div>
                </div>

                <div class="mb-4">
                    <div class="d-flex justify-content-between mb-1">
                        <span class="small fw-600">Prestataires</span>
                        <span class="small fw-bold">@Model.TotalPrestataires</span>
                    </div>
                    <div class="progress progress-thin">
                        <div class="progress-bar bg-success" style="width: 25%"></div>
                    </div>
                </div>

                <div class="mb-0">
                    <div class="d-flex justify-content-between mb-1">
                        <span class="small fw-600">Companies</span>
                        <span class="small fw-bold">@Model.TotalSocietes</span>
                    </div>
                    <div class="progress progress-thin">
                        <div class="progress-bar bg-info" style="width: 10%"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="summary-card">
                <h3 class="h5 fw-bold mb-4">Service Health</h3>
                <div class="p-4 rounded-4 text-center" style="background: #f8fafc; border: 1px dashed #cbd5e1;">
                    <div class="row">
                        <div class="col-6 border-end">
                            <div class="h3 fw-bold text-success mb-0">@Model.ActivePrestations</div>
                            <div class="small text-secondary">Active Services</div>
                        </div>
                        <div class="col-6">
                            <div class="h3 fw-bold text-primary mb-0">@Model.TotalPrestations</div>
                            <div class="small text-secondary">Total Bookings</div>
                        </div>
                    </div>
                </div>
                <div class="mt-4">
                    <button class="btn custom-btn w-100 mb-2">Generate Monthly Report</button>
                    <button class="btn custom-btn w-100">System Logs</button>
                </div>
            </div>
        </div>
    </div>
</div>