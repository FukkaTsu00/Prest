@model GestionPrestation.Models.ApplicationUser
@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .edit-card {
        border-radius: 16px;
        transition: box-shadow 0.3s ease;
    }

    .form-control:focus {
        border-color: #10b981;
        box-shadow: 0 0 0 0.25rem rgba(16, 185, 129, 0.1);
    }

    .input-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: #64748b;
        margin-bottom: 0.5rem;
    }
</style>

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a asp-action="Users">Users</a></li>
                    <li class="breadcrumb-item active">Edit Profile</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0 fw-bold text-dark"><i class="bi bi-pencil-square me-2 text-primary"></i>Modify Account</h1>
        </div>
        <a asp-action="Users" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="bi bi-arrow-left me-1"></i>Back
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card edit-card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-person-gear me-2 text-primary"></i>Profile Settings</h5>
                </div>
                <div class="card-body p-4 p-md-5">
                    <form asp-action="EditUser" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="input-label fw-bold">First Name <span class="text-danger">*</span></label>
                                <input asp-for="FirstName" class="form-control form-control-lg border-2 shadow-none" placeholder="First Name" required />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastName" class="input-label fw-bold">Last Name <span class="text-danger">*</span></label>
                                <input asp-for="LastName" class="form-control form-control-lg border-2 shadow-none" placeholder="Last Name" required />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Email" class="input-label fw-bold">Email Address <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-2 border-end-0"><i class="bi bi-envelope-at"></i></span>
                                <input asp-for="Email" type="email" class="form-control form-control-lg border-2 border-start-0 shadow-none" placeholder="Email" required />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                            <div class="form-text mt-2">Note: Changing the email may affect the user's login credentials.</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="PhoneNumber" class="input-label fw-bold">Phone Number</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-2 border-end-0"><i class="bi bi-telephone"></i></span>
                                <input asp-for="PhoneNumber" class="form-control form-control-lg border-2 border-start-0 shadow-none" placeholder="e.g. +212 600 000000" />
                            </div>
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <hr class="my-4 border-light">

                        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center gap-3">
                            <div class="text-muted small">
                                <i class="bi bi-clock-history me-1"></i> Last modified: @DateTime.Now.ToString("g")
                            </div>
                            <div class="d-flex gap-2 w-100 w-md-auto">
                                <a asp-action="Users" class="btn btn-light rounded-pill px-4 flex-grow-1">
                                    Cancel
                                </a>
                                <button type="submit" class="btn btn-primary rounded-pill px-5 shadow-sm flex-grow-1">
                                    <i class="bi bi-save me-2"></i>Update User
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card mt-4 border-0 shadow-sm bg-danger-subtle">
                <div class="card-body d-flex justify-content-between align-items-center p-4">
                    <div>
                        <h6 class="fw-bold text-danger mb-1">Security & Access</h6>
                        <p class="text-danger small mb-0">Reset password or manage multi-factor authentication for this user.</p>
                    </div>
                    <a asp-action="UserDetails" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-sm rounded-pill px-3">
                        Manage Security
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}