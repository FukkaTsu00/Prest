@model GestionPrestation.Models.ViewModels.UserWithRoles
@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .avatar-large {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #10b981, #065f46);
        color: white;
        border-radius: 24px; /* Squircle style */
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        font-weight: 800;
        box-shadow: 0 10px 15px -3px rgba(16, 185, 129, 0.2);
    }

    .info-label {
        font-weight: 700;
        color: #64748b;
        font-size: 0.85rem;
        text-transform: uppercase;
    }

    .profile-card {
        border-radius: 16px;
        border: 1px solid #e2e8f0;
    }

    .role-item {
        transition: all 0.2s;
    }

        .role-item:hover {
            background-color: #f1f5f9 !important;
        }
</style>

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a asp-action="Users">Users</a></li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0 fw-bold text-dark">Profile Overview</h1>
        </div>
        <a asp-action="Users" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="bi bi-arrow-left me-1"></i>Back to List
        </a>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card profile-card border-0 shadow-sm overflow-hidden">
                <div class="card-body text-center pt-5">
                    <div class="avatar-large mx-auto mb-3">
                        @{
                            var initials = (Model.User?.FirstName?.Substring(0, 1) ?? "?") +
                            (Model.User?.LastName?.Substring(0, 1) ?? "?");
                        }
                        @initials.ToUpper()
                    </div>
                    <h4 class="fw-bold mb-1">@(Model.User?.FirstName) @(Model.User?.LastName)</h4>
                    <p class="text-muted mb-4">@Model.User?.Email</p>

                    <div class="d-grid gap-2 px-3 mb-4">
                        <a asp-action="EditUser" asp-route-id="@Model.User?.Id" class="btn btn-primary rounded-3">
                            <i class="bi bi-pencil-square me-2"></i>Edit Profile
                        </a>

                        @if (Model.User?.LockoutEnd.HasValue == true && Model.User.LockoutEnd > DateTimeOffset.UtcNow)
                        {
                            <form asp-action="ActivateUser" asp-route-id="@Model.User.Id" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-success w-100 rounded-3">
                                    <i class="bi bi-check-circle me-2"></i>Activate Account
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="DeactivateUser" asp-route-id="@Model.User?.Id" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger w-100 rounded-3" onclick="return confirm('Suspend this user?')">
                                    <i class="bi bi-slash-circle me-2"></i>Suspend Account
                                </button>
                            </form>
                        }
                    </div>
                </div>
                <div class="bg-light p-3 border-top text-center">
                    <small class="text-muted">User ID: @Model.User?.Id</small>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card profile-card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-info-circle me-2 text-primary"></i>General Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4 info-label">Phone Number</div>
                        <div class="col-sm-8">@(Model.User?.PhoneNumber ?? "Not Provided")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 info-label">Account Status</div>
                        <div class="col-sm-8">
                            @if (Model.User?.LockoutEnd.HasValue == true && Model.User.LockoutEnd > DateTimeOffset.UtcNow)
                            {
                                <span class="badge bg-danger-subtle text-danger border border-danger-subtle px-3">Suspended</span>
                            }
                            else
                            {
                                <span class="badge bg-success-subtle text-success border border-success-subtle px-3">Active</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="card profile-card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-dark"><i class="bi bi-shield-lock me-2 text-primary"></i>Security Roles</h5>
                    <button class="btn btn-sm btn-dark rounded-pill px-3" data-bs-toggle="modal" data-bs-target="#assignRoleModal">
                        <i class="bi bi-plus-lg me-1"></i>Add Role
                    </button>
                </div>
                <div class="card-body">
                    @if (Model.Roles != null && Model.Roles.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var role in Model.Roles)
                            {
                                <div class="list-group-item role-item d-flex justify-content-between align-items-center border-0 px-0">
                                    <div class="d-flex align-items-center">
                                        <div class="p-2 rounded-circle bg-light me-3">
                                            <i class="bi bi-shield-check text-primary"></i>
                                        </div>
                                        <span class="fw-bold text-dark">@role</span>
                                    </div>
                                    <form asp-action="RemoveRole" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="userId" value="@Model.User?.Id" />
                                        <input type="hidden" name="role" value="@role" />
                                        <button type="submit" class="btn btn-link text-danger p-0" onclick="return confirm('Remove @role role?')">
                                            <i class="bi bi-x-circle-fill"></i>
                                        </button>
                                    </form>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted small italic mb-0">No roles assigned to this account.</p>
                    }
                </div>
            </div>

            @if (Model.Prestataire != null)
            {
                <div class="card profile-card border-0 shadow-sm border-start border-4 border-success">
                    <div class="card-body">
                        <h6 class="fw-bold text-success mb-3">PRESTATAIRE DETAILS</h6>
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <span class="info-label d-block">Specialty</span>
                                <strong>@Model.Prestataire.Specialite</strong>
                            </div>
                            <div class="col-md-6 mb-2">
                                <span class="info-label d-block">Hourly Rate</span>
                                <strong>@Model.Prestataire.TarifHoraire.ToString("C")</strong>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (Model.Societe != null)
            {
                <div class="card profile-card border-0 shadow-sm border-start border-4 border-warning mt-3">
                    <div class="card-body">
                        <h6 class="fw-bold text-warning mb-3">SOCIETE DETAILS</h6>
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <span class="info-label d-block">Business Name</span>
                                <strong>@Model.Societe.Nom</strong>
                            </div>
                            <div class="col-md-6 mb-2">
                                <span class="info-label d-block">Registration</span>
                                <strong>@Model.Societe.NumeroStringCommerce</strong>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="assignRoleModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <form asp-action="AssignRole" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="userId" value="@Model.User?.Id" />
                <div class="modal-header border-0">
                    <h5 class="fw-bold mb-0">Assign New Role</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body py-4">
                    <label class="form-label info-label">Choose Security Role</label>
                    <select name="role" class="form-select form-select-lg rounded-3" required>
                        <option value="">Select Role...</option>
                        <option value="Admin">Administrator</option>
                        <option value="Client">Client</option>
                        <option value="Prestataire">Prestataire</option>
                        <option value="Societe">Société</option>
                    </select>
                    <p class="small text-muted mt-3">Note: Assigning a role may grant the user additional permissions immediately.</p>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4">Save Role</button>
                </div>
            </form>
        </div>
    </div>
</div>