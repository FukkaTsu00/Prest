@model List<GestionPrestation.Models.ViewModels.UserWithRoles>
@using GestionPrestation.Models.ViewModels
@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var modelList = Model ?? new List<UserWithRoles>();
}

<style>
    :root {
        --primary-green: #10b981;
        --primary-dark: #065f46;
        --bg-subtle: #f8fafc;
        --border-color: #e2e8f0;
    }

    .page-wrapper {
        padding: 2rem;
        background-color: var(--bg-subtle);
        min-height: 100vh;
    }

    /* Header Styling */
    .management-header {
        margin-bottom: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
    }

    .header-content h1 {
        font-weight: 800;
        color: #1e293b;
        letter-spacing: -0.02em;
        margin-bottom: 0.25rem;
    }

    /* Cards & Filters */
    .filter-card {
        background: white;
        border-radius: 16px;
        padding: 1.25rem;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        border: 1px solid var(--border-color);
        margin-bottom: 1.5rem;
    }

    .search-input-group {
        position: relative;
        max-width: 400px;
    }

        .search-input-group i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
        }

        .search-input-group input {
            padding-left: 2.75rem;
            border-radius: 12px;
            border: 1px solid var(--border-color);
            height: 45px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

            .search-input-group input:focus {
                border-color: var(--primary-green);
                box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.1);
                width: 110%; /* Subtle expansion on focus */
            }

    /* Data Table Styling */
    .data-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05);
        border: 1px solid var(--border-color);
    }

    .user-table thead {
        background: #f1f5f9;
    }

        .user-table thead th {
            font-size: 0.75rem;
            text-transform: uppercase;
            font-weight: 700;
            color: #64748b;
            padding: 1rem 1.5rem;
            border: none;
        }

    .user-table td {
        padding: 1rem 1.5rem;
        vertical-align: middle;
    }

    /* Avatar Design */
    .avatar-circle {
        width: 42px;
        height: 42px;
        background: linear-gradient(135deg, var(--primary-green), var(--primary-dark));
        color: white;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        margin-right: 1rem;
    }

    /* Action Buttons */
    .btn-action {
        width: 36px;
        height: 36px;
        border-radius: 10px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
        border: 1px solid var(--border-color);
        background: white;
        color: #64748b;
        margin-left: 4px;
    }

        .btn-action:hover {
            background: var(--primary-green);
            color: white;
            border-color: var(--primary-green);
            transform: translateY(-2px);
        }

        .btn-action.delete:hover {
            background: #ef4444;
            border-color: #ef4444;
        }
</style>

<div class="page-wrapper">
    <div class="management-header">
        <div class="header-content">
            <h1>User Management</h1>
            <p class="text-secondary mb-0">Overview of all system members and their roles.</p>
        </div>
        <a asp-action="CreateUser" class="btn btn-success rounded-3 px-4 shadow-sm" style="background-color: var(--primary-green); border:none;">
            <i class="bi bi-person-plus-fill me-2"></i>New User
        </a>
    </div>

    @* Summary Row *@
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="filter-card py-3">
                <small class="text-secondary fw-bold">TOTAL USERS</small>
                <div class="h4 mb-0 fw-bold">@modelList.Count</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="filter-card py-3">
                <small class="text-secondary fw-bold text-success">ACTIVE ACCOUNTS</small>
                <div class="h4 mb-0 fw-bold text-success">@modelList.Count(u => u.IsActive)</div>
            </div>
        </div>
    </div>

    <div class="filter-card">
        <div class="search-input-group">
            <i class="bi bi-search"></i>
            <input type="text" id="userInput" class="form-control" placeholder="Search by name, email or role..." onkeyup="filterUsers()">
        </div>
    </div>

    <div class="data-card">
        <div class="table-responsive">
            <table class="table user-table mb-0" id="userTable">
                <thead>
                    <tr>
                        <th>User Profile</th>
                        <th>Contact Info</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in modelList)
                    {
                        var initials = (user.FirstName?.Substring(0, 1) ?? "") + (user.LastName?.Substring(0, 1) ?? "");
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle">@initials.ToUpper()</div>
                                    <div>
                                        <div class="fw-bold">@user.FirstName @user.LastName</div>
                                        <small class="text-muted">@user.Id.ToString().Substring(0, 8)</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="fw-500">@user.Email</div>
                                <div class="small text-secondary">@user.PhoneNumber</div>
                            </td>
                            <td>
                                <span class="badge @(user.RoleName == "Admin" ? "bg-primary" : "bg-light text-dark") border">
                                    @user.RoleName
                                </span>
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success-subtle text-success border border-success-subtle px-3">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger-subtle text-danger border border-danger-subtle px-3">Inactive</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="UserDetails" asp-route-id="@user.Id" class="btn-action">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="EditUser" asp-route-id="@user.Id" class="btn-action">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" style="display: inline;" onsubmit="return confirmDelete('@user.Id', '@user.FirstName')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn-action delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    function filterUsers() {
        let input = document.getElementById('userInput');
        let filter = input.value.toLowerCase();
        let table = document.getElementById('userTable');
        let tr = table.getElementsByTagName('tr');

        for (let i = 1; i < tr.length; i++) {
            let rowText = tr[i].innerText.toLowerCase();
            tr[i].style.display = rowText.includes(filter) ? "" : "none";
        }
    }

    function confirmDelete(id, name) {
        return confirm(`Are you sure you want to permanently delete user: ${name}?`);
    }
</script>