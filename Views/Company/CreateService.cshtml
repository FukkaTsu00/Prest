@model GestionPrestation.Models.Service
@{
    ViewData["Title"] = "Create Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0"><i class="bi bi-plus-circle me-2"></i>Create New Service</h1>
        <a asp-action="Services" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to Services
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="mb-0"><i class="bi bi-file-earmark-plus me-2"></i>Service Details</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="CreateService" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Nom" class="form-label fw-bold">Service Name <span class="text-danger">*</span></label>
                            <input asp-for="Nom" class="form-control" required />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Description <span class="text-danger">*</span></label>
                            <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Categorie" class="form-label fw-bold">Category <span class="text-danger">*</span></label>
                                <select asp-for="Categorie" class="form-select" required>
                                    <option value="">Choose...</option>
                                    <option value="@GestionPrestation.Models.Service.ServiceCategories.Consulting">Consulting</option>
                                    <option value="@GestionPrestation.Models.Service.ServiceCategories.Development">Development</option>
                                    <option value="@GestionPrestation.Models.Service.ServiceCategories.Design">Design</option>
                                    <option value="@GestionPrestation.Models.Service.ServiceCategories.Marketing">Marketing</option>
                                    <option value="@GestionPrestation.Models.Service.ServiceCategories.Support">Support</option>
                                    <option value="@GestionPrestation.Models.Service.ServiceCategories.Training">Training</option>
                                    <option value="@GestionPrestation.Models.Service.ServiceCategories.Maintenance">Maintenance</option>
                                    <option value="@GestionPrestation.Models.Service.ServiceCategories.Other">Other</option>
                                </select>
                                <span asp-validation-for="Categorie" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="BillingType" class="form-label fw-bold">Billing Type</label>
                                <select asp-for="BillingType" class="form-select">
                                    <option value="@GestionPrestation.Models.Service.BillingTypes.Fixed">Fixed</option>
                                    <option value="@GestionPrestation.Models.Service.BillingTypes.Hourly">Hourly</option>
                                    <option value="@GestionPrestation.Models.Service.BillingTypes.Milestone">Milestone</option>
                                    <option value="@GestionPrestation.Models.Service.BillingTypes.Subscription">Subscription</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="PrixBase" class="form-label fw-bold">Base Price <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="PrixBase" type="number" step="0.01" class="form-control" required />
                                </div>
                                <span asp-validation-for="PrixBase" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DureeEstimeeHeures" class="form-label fw-bold">Estimated Hours <span class="text-danger">*</span></label>
                                <input asp-for="DureeEstimeeHeures" type="number" class="form-control" required />
                                <span asp-validation-for="DureeEstimeeHeures" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SkillsRequired" class="form-label fw-bold">Required Skills</label>
                            <input asp-for="SkillsRequired" class="form-control" placeholder="e.g., JavaScript, React, Node.js" />
                            <div class="form-text">Comma-separated list of skills</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Requirements" class="form-label fw-bold">Requirements</label>
                            <textarea asp-for="Requirements" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Deliverables" class="form-label fw-bold">Deliverables</label>
                            <textarea asp-for="Deliverables" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsActive" type="checkbox" class="form-check-input" checked />
                            <label asp-for="IsActive" class="form-check-label fw-bold">Active Service</label>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Services" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i>Create Service
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}








