@model List<GestionPrestation.Models.Prestataire>
@{
    ViewData["Title"] = "Manage Prestataires";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0"><i class="bi bi-people me-2"></i>Manage Prestataires</h1>
        <a asp-action="RegisterPrestataire" class="btn btn-primary">
            <i class="bi bi-person-plus me-1"></i>Register New Prestataire
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-12">
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                <strong>Note:</strong> Prestataires need to be registered and approved by an Admin before they can be assigned to prestations. 
                After registering a prestataire, contact an Admin for approval.
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom py-3">
            <h5 class="mb-0">Registered Prestataires</h5>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Specialty</th>
                                <th>Phone</th>
                                <th>Hourly Rate</th>
                                <th>Status</th>
                                <th>Approval</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var prestataire in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@prestataire.Nom @prestataire.Prenom</strong>
                                    </td>
                                    <td>@prestataire.Specialite</td>
                                    <td>@prestataire.Telephone</td>
                                    <td>@prestataire.TarifHoraire.ToString("C")/hour</td>
                                    <td>
                                        @if (prestataire.Disponible)
                                        {
                                            <span class="badge bg-success">Available</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Unavailable</span>
                                        }
                                    </td>
                                    <td>
                                        @if (prestataire.IsApproved)
                                        {
                                            <span class="badge bg-success">Approved</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Pending Approval</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="text-muted small">View Details</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <p class="text-muted mt-3">No prestataires registered yet</p>
                    <a asp-action="RegisterPrestataire" class="btn btn-primary mt-2">
                        <i class="bi bi-person-plus me-1"></i>Register Your First Prestataire
                    </a>
                </div>
            }
        </div>
    </div>
</div>






