@model GestionPrestation.Models.Prestation
@{
    ViewData["Title"] = "Prestation Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var prestataires = ViewBag.Prestataires as List<GestionPrestation.Models.Prestataire> ?? new List<GestionPrestation.Models.Prestataire>();
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0"><i class="bi bi-file-earmark-text me-2"></i>Prestation #@Model.Id</h1>
        <a asp-action="Prestations" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to Prestations
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-bottom py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Prestation Details</h5>
                        <span class="badge @GetStatusBadgeClass(Model.Statut)">@Model.Statut</span>
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Service:</dt>
                        <dd class="col-sm-9"><strong>@Model.Service?.Nom</strong></dd>

                        <dt class="col-sm-3">Client:</dt>
                        <dd class="col-sm-9">
                            <strong>@Model.Client?.Nom @Model.Client?.Prenom</strong><br>
                            <small class="text-muted">@Model.Client?.Email</small>
                        </dd>

                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Current Price:</dt>
                        <dd class="col-sm-9"><strong class="text-primary">@Model.PrixFinal.ToString("C")</strong></dd>

                        <dt class="col-sm-3">Estimated Hours:</dt>
                        <dd class="col-sm-9">@Model.DureeEstimeeHeures hours</dd>

                        <dt class="col-sm-3">Created:</dt>
                        <dd class="col-sm-9">@Model.DateCreation.ToString("MMMM dd, yyyy HH:mm")</dd>

                        @if (Model.Prestataire != null)
                        {
                            <dt class="col-sm-3">Assigned To:</dt>
                            <dd class="col-sm-9">
                                <strong>@Model.Prestataire.Nom @Model.Prestataire.Prenom</strong>
                                @if (!string.IsNullOrEmpty(Model.Prestataire.Specialite))
                                {
                                    <span class="badge bg-secondary ms-2">@Model.Prestataire.Specialite</span>
                                }
                            </dd>
                        }

                        @if (Model.DateAssignation.HasValue)
                        {
                            <dt class="col-sm-3">Assigned Date:</dt>
                            <dd class="col-sm-9">@Model.DateAssignation.Value.ToString("MMMM dd, yyyy HH:mm")</dd>
                        }
                    </dl>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ProgressUpdates))
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom py-3">
                        <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Progress Updates</h5>
                    </div>
                    <div class="card-body">
                        <div class="timeline">
                            @foreach (var update in Model.ProgressUpdates.Split('\n', StringSplitOptions.RemoveEmptyEntries))
                            {
                                <div class="timeline-item mb-3">
                                    <div class="d-flex">
                                        <div class="timeline-marker bg-primary rounded-circle me-3"></div>
                                        <div class="flex-grow-1">
                                            <p class="mb-0 text-muted">@update</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <!-- Assign Prestataire -->
            @if (Model.Statut == "Planifiée" && Model.IdPrestataire == null)
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom py-3">
                        <h5 class="mb-0"><i class="bi bi-person-plus me-2"></i>Assign Prestataire</h5>
                    </div>
                    <div class="card-body">
                        @if (prestataires.Any(p => p.IsApproved))
                        {
                            <form asp-action="AssignPrestation" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="prestationId" value="@Model.Id" />
                                
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Select Prestataire <span class="text-danger">*</span></label>
                                    <select name="prestataireId" class="form-select" required>
                                        <option value="">Choose a prestataire...</option>
                                        @foreach (var prestataire in prestataires.Where(p => p.IsApproved && p.Disponible))
                                        {
                                            <option value="@prestataire.Id">
                                                @prestataire.Nom @prestataire.Prenom
                                                @if (!string.IsNullOrEmpty(prestataire.Specialite))
                                                {
                                                    <text> - @prestataire.Specialite</text>
                                                }
                                                (@prestataire.TarifHoraire.ToString("C")/hour)
                                            </option>
                                        }
                                    </select>
                                    <div class="form-text">Only approved and available prestataires are shown</div>
                                </div>

                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="bi bi-check-circle me-1"></i>Assign Prestataire
                                </button>
                            </form>
                            
                            @if (prestataires.Any(p => p.IsApproved && !p.Disponible))
                            {
                                <div class="mt-3">
                                    <small class="text-muted">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Some prestataires are unavailable. Contact Admin for more options.
                                    </small>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <strong>No approved prestataires available!</strong><br>
                                You need to:
                                <ol class="mb-0 mt-2">
                                    <li>Register prestataires at <a asp-action="Prestataires" class="alert-link">Prestataires</a></li>
                                    <li>Contact an Admin to approve them</li>
                                </ol>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Update Pricing -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="mb-0"><i class="bi bi-currency-dollar me-2"></i>Pricing</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdatePricing" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="prestationId" value="@Model.Id" />
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Final Price</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input type="number" name="prixFinal" step="0.01" class="form-control" 
                                       value="@Model.PrixFinal" required />
                            </div>
                            <div class="form-text">Base price: @Model.Service?.PrixBase.ToString("C")</div>
                        </div>

                        <button type="submit" class="btn btn-outline-primary w-100">
                            <i class="bi bi-pencil me-1"></i>Update Price
                        </button>
                    </form>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Info</h5>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <small class="text-muted d-block">Service Category</small>
                        <strong>@Model.Service?.Categorie</strong>
                    </div>
                    <div class="mb-2">
                        <small class="text-muted d-block">Base Price</small>
                        <strong>@Model.Service?.PrixBase.ToString("C")</strong>
                    </div>
                    @if (Model.Prestataire != null)
                    {
                        <div class="mb-2">
                            <small class="text-muted d-block">Prestataire Rate</small>
                            <strong>@Model.Prestataire.TarifHoraire.ToString("C")/hour</strong>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline-marker {
        width: 12px;
        height: 12px;
        margin-top: 6px;
        flex-shrink: 0;
    }
</style>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Planifiée" => "bg-secondary",
            "Assignée" => "bg-info",
            "En cours" => "bg-primary",
            "Terminée" => "bg-success",
            "Validée" => "bg-success",
            "Annulée" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

