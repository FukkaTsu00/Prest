@model GestionPrestation.Models.Societe
@{
    ViewData["Title"] = "Company Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0"><i class="bi bi-building me-2"></i>Company Profile</h1>
        <a asp-action="Dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Edit Company Profile</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Profile" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Nom" class="form-label fw-bold">Company Name <span class="text-danger">*</span></label>
                            <input asp-for="Nom" class="form-control" required />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">Email <span class="text-danger">*</span></label>
                            <input asp-for="Email" type="email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Adresse" class="form-label fw-bold">Address <span class="text-danger">*</span></label>
                            <textarea asp-for="Adresse" class="form-control" rows="3" required></textarea>
                            <span asp-validation-for="Adresse" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NumeroStringCommerce" class="form-label fw-bold">Registration Number <span class="text-danger">*</span></label>
                            <input asp-for="NumeroStringCommerce" class="form-control" required />
                            <span asp-validation-for="NumeroStringCommerce" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ApplicationUserId" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}






