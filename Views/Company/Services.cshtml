@model List<GestionPrestation.Models.Service>
@{
    ViewData["Title"] = "Services Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0"><i class="bi bi-briefcase me-2"></i>Services Management</h1>
        <a asp-action="CreateService" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Create New Service
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var service in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 shadow-sm h-100 service-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title mb-1">@service.Nom</h5>
                                    <span class="badge bg-primary">@service.Categorie</span>
                                </div>
                                @if (service.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </div>
                            
                            <p class="card-text text-muted small mb-3">@service.Description</p>
                            
                            <div class="mb-3">
                                <strong class="text-primary">@service.PrixBase.ToString("C")</strong>
                                <span class="text-muted small"> / @service.DureeEstimeeHeures hours</span>
                            </div>

                            @if (!string.IsNullOrEmpty(service.SkillsRequired))
                            {
                                <div class="mb-3">
                                    <small class="text-muted">Skills: @service.SkillsRequired</small>
                                </div>
                            }

                            <div class="d-grid gap-2">
                                <a asp-action="EditService" asp-route-id="@service.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil me-1"></i>Edit
                                </a>
                                <form asp-action="DeleteService" asp-route-id="@service.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger w-100"
                                            onclick="return confirm('Are you sure you want to delete this service?')">
                                        <i class="bi bi-trash me-1"></i>Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-inbox display-1 text-muted"></i>
                        <p class="text-muted mt-3">No services found</p>
                        <a asp-action="CreateService" class="btn btn-primary mt-2">
                            <i class="bi bi-plus-circle me-1"></i>Create Your First Service
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .service-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 12px;
    }
    .service-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1) !important;
    }
</style>








