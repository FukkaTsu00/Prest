@{
    ViewData["Title"] = "Home - Gestion de Prestation";
}

<main>

    <!-- Hero Section -->
    <section class="hero-section d-flex align-items-center text-center text-white" style="min-height: 90vh; background: linear-gradient(135deg, #1f4287, #2196f3);">
        <div class="container py-5">
            <h1 class="display-3 fw-bold mb-4 animate__animated animate__fadeInDown">
                Manage Services. Connect Professionals. Succeed.
            </h1>
            <p class="lead mb-5 animate__animated animate__fadeInUp">
                The integrated platform for effortless service management, from contract negotiation to final payment.
            </p>
            <div class="d-grid gap-3 d-sm-flex justify-content-sm-center animate__animated animate__fadeInUp animate__delay-1s">
                <a asp-area="Identity" asp-page="/Account/Register" asp-route-role="Prestataire" class="btn btn-light btn-lg px-4 shadow-sm">
                    Become a Prestataire
                </a>
                <a asp-area="Identity" asp-page="/Account/Register" asp-route-role="Client" class="btn btn-outline-light btn-lg px-4 shadow-sm">
                    Find a Service
                </a>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="container py-5">
        <h2 class="text-center mb-5 fw-light">Solutions for seamless service delivery</h2>
        <div class="row text-center g-4">

            <div class="col-lg-4">
                <div class="card shadow-sm h-100 p-5 border-0 rounded-4 text-center hover-card">
                    <i class="bi bi-file-earmark-text-fill text-primary mb-3"></i>
                    <h3 class="h5 fw-bold">Contract Automation</h3>
                    <p class="text-muted mt-2">Generate, manage, and sign contracts digitally. Minimize paperwork and maximize compliance.</p>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm h-100 p-5 border-0 rounded-4 text-center hover-card">
                    <i class="bi bi-currency-dollar text-primary mb-3"></i>
                    <h3 class="h5 fw-bold">Integrated Billing</h3>
                    <p class="text-muted mt-2">Issue professional invoices (Factures) and track payments (Paiement) directly within the system.</p>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm h-100 p-5 border-0 rounded-4 text-center hover-card">
                    <i class="bi bi-people-fill text-primary mb-3"></i>
                    <h3 class="h5 fw-bold">Verified Professionals</h3>
                    <p class="text-muted mt-2">Connect only with Admin-approved Prestataires who meet our quality and background standards.</p>
                </div>
            </div>

        </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-primary text-white py-5 text-center">
        <div class="container">
            <h3 class="mb-4 fw-bold">Ready to transform your service management?</h3>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-light btn-lg px-5 shadow-sm">
                Get Started Today
            </a>
        </div>
    </section>

</main>

<!-- Custom Styles -->
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .hero-section h1 {
        text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.4);
    }

    .card i {
        font-size: 3rem;
        transition: transform 0.3s ease;
    }

    .hover-card:hover i {
        transform: scale(1.2);
    }

    .hover-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 1rem 3rem rgba(0,0,0,0.25) !important;
    }

    .btn-lg {
        border-radius: 50px;
    }
</style>

<!-- Optional: Animate.css for subtle animations -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
