@model List<GestionPrestation.Models.Prestation>
@{
    ViewData["Title"] = "My Assignments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 py-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
        <div>
            <h1 class="h3 fw-bold text-dark mb-1"><i class="bi bi-briefcase me-2 text-primary"></i>My Assignments</h1>
            <p class="text-muted mb-0">Track your progress and manage your client deliverables.</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="AvailablePrestations" class="btn btn-primary rounded-pill px-4 shadow-sm">
                <i class="bi bi-search me-2"></i>Find New Jobs
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-3">
            <div class="row g-3 align-items-center">
                <div class="col-md-4">
                    <div class="input-group input-group-merge border rounded-pill px-3">
                        <span class="input-group-text bg-transparent border-0"><i class="bi bi-filter"></i></span>
                        <input type="text" id="workSearch" class="form-control border-0 bg-transparent" placeholder="Search by client or service...">
                    </div>
                </div>
                <div class="col-md-8 text-md-end">
                    <div class="btn-group btn-group-sm rounded-pill p-1 bg-light">
                        <button class="btn btn-white rounded-pill shadow-sm work-filter active" data-filter="all">All Jobs</button>
                        <button class="btn btn-transparent rounded-pill work-filter" data-filter="En cours">Active</button>
                        <button class="btn btn-transparent rounded-pill work-filter" data-filter="Terminée">Completed</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0" id="workTable">
                        <thead class="bg-light border-bottom">
                            <tr>
                                <th class="ps-4 py-3 text-uppercase small fw-bold text-muted">Job Ref</th>
                                <th class="py-3 text-uppercase small fw-bold text-muted">Service & Client</th>
                                <th class="py-3 text-uppercase small fw-bold text-muted">Earnings</th>
                                <th class="py-3 text-uppercase small fw-bold text-muted">Progress</th>
                                <th class="py-3 text-uppercase small fw-bold text-muted">Status</th>
                                <th class="py-3 text-end pe-4 text-uppercase small fw-bold text-muted">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model)
                            {
                                <tr class="work-row" data-status="@p.Statut">
                                    <td class="ps-4">
                                        <span class="fw-bold text-dark">#@p.Id</span>
                                    </td>
                                    <td>
                                        <div class="fw-bold text-dark">@p.Service?.Nom</div>
                                        <div class="small text-muted"><i class="bi bi-person me-1"></i>@p.Client?.Prenom @p.Client?.Nom</div>
                                    </td>
                                    <td>
                                        <span class="fw-bold text-primary">@p.PrixFinal.ToString("C")</span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center" style="min-width: 120px;">
                                            <div class="progress flex-grow-1" style="height: 6px;">
                                                <div class="progress-bar rounded-pill" style="width: @GetProgress(p.Statut)%"></div>
                                            </div>
                                            <span class="ms-2 small fw-bold text-muted">@GetProgress(p.Statut)%</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(p.Statut) rounded-pill px-3 py-2">
                                            @p.Statut
                                        </span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <a asp-action="PrestationDetails" asp-route-id="@p.Id"
                                           class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                            Manage <i class="bi bi-arrow-right ms-1"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="bi bi-clipboard-x display-4 text-muted opacity-25"></i>
                    </div>
                    <h5 class="fw-bold">No assignments yet</h5>
                    <p class="text-muted">You haven't been assigned to any prestations yet.</p>
                    <a asp-action="AvailablePrestations" class="btn btn-primary rounded-pill px-4">
                        Browse Open Requests
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .bg-light {
        background-color: #f8f9fa !important;
    }

    .input-group-merge .form-control:focus {
        box-shadow: none;
    }

    .work-filter.active {
        background-color: white !important;
        color: #0d6efd !important;
    }

    .progress-bar {
        background: linear-gradient(90deg, #0d6efd 0%, #0dcaf0 100%);
    }

    .table-hover tbody tr:hover {
        background-color: #f8faff !important;
        cursor: pointer;
    }
</style>

@section Scripts {
    <script>
        // Search functionality
        document.getElementById('workSearch').addEventListener('keyup', function() {
            const val = this.value.toLowerCase();
            document.querySelectorAll('.work-row').forEach(row => {
                row.style.display = row.innerText.toLowerCase().includes(val) ? '' : 'none';
            });
        });

        // Tab Filter functionality
        document.querySelectorAll('.work-filter').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.work-filter').forEach(b => b.classList.remove('active', 'btn-white', 'shadow-sm'));
                this.classList.add('active', 'btn-white', 'shadow-sm');

                const filter = this.dataset.filter;
                document.querySelectorAll('.work-row').forEach(row => {
                    row.style.display = (filter === 'all' || row.dataset.status === filter) ? '' : 'none';
                });
            });
        });
    </script>
}

@functions {
    string GetStatusBadgeClass(string status) => status switch
    {
        "En cours" => "bg-primary-subtle text-primary border border-primary",
        "Terminée" => "bg-success-subtle text-success border border-success",
        "Validée" => "bg-success text-white",
        "Assignée" => "bg-info-subtle text-info border border-info",
        "Annulée" => "bg-danger-subtle text-danger border border-danger",
        _ => "bg-secondary-subtle text-secondary"
    };

    int GetProgress(string status) => status switch
    {
        "Planifiée" => 10,
        "Assignée" => 30,
        "En cours" => 65,
        "Terminée" => 90,
        "Validée" => 100,
        _ => 0
    };
}