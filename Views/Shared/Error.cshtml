@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Error
                    </h2>
                </div>
                <div class="card-body text-center py-5">
                    <i class="bi bi-x-circle text-danger" style="font-size: 4rem;"></i>
                    <h3 class="text-danger mt-3">An error occurred while processing your request.</h3>
                    
                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-info mt-4">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </div>
                    }

                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house me-2"></i>Return to Home
                        </a>
                    </div>

                    @if (Model.ShowRequestId)
                    {
                        <div class="mt-4">
                            <small class="text-muted">
                                <strong>Development Mode:</strong> The Development environment displays detailed error information. 
                                This should not be enabled in production.
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
