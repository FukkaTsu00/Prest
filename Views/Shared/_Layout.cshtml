                                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" style="margin: 0;">
                                    <button type="submit" class="dropdown-item-modern" style="width: 100%; text-align: left; color: #dc2626;">
                                        <i class="bi bi-box-arrow-right"></i>
                                        <span>Déconnexion</span>
                                    </button>
                                </form>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item-modern" style="margin-left: auto;">
                            <a href="/Identity/Account/Register" class="auth-btn auth-btn-outline">
                                <i class="bi bi-person-plus"></i>
                                <span>S'inscrire</span>
                            </a>
                        </li>
                        <li class="nav-item-modern">
                            <a href="/Identity/Account/Login" class="auth-btn auth-btn-solid">
                                <i class="bi bi-box-arrow-in-right"></i>
                                <span>Connexion</span>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- ========== MAIN CONTENT ========== -->
    <main>
