@model int

<div class="btn-group" role="group">
    <a asp-action="Details" asp-route-id="@Model" class="btn btn-sm btn-outline-primary">
        <i class="bi bi-eye"></i> View
    </a>
    <a asp-action="Edit" asp-route-id="@Model" class="btn btn-sm btn-outline-warning">
        <i class="bi bi-pencil"></i> Edit
    </a>
    <a asp-action="Delete" asp-route-id="@Model" class="btn btn-sm btn-outline-danger">
        <i class="bi bi-trash"></i> Delete
    </a>
</div>











